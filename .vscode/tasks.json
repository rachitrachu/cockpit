{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Open XAVS Wizard",
            "type": "shell",
            "command": "echo",
            "args": ["Opening XAVS Wizard at https://localhost:9090/xavs"],
            "windows": {
                "command": "start",
                "args": ["https://localhost:9090/xavs"]
            },
            "linux": {
                "command": "xdg-open",
                "args": ["https://localhost:9090/xavs"]
            },
            "osx": {
                "command": "open",
                "args": ["https://localhost:9090/xavs"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "üñ•Ô∏è Open Cockpit Dashboard",
            "type": "shell",
            "command": "echo",
            "args": ["Opening Cockpit Dashboard at https://localhost:9090"],
            "windows": {
                "command": "start",
                "args": ["https://localhost:9090"]
            },
            "linux": {
                "command": "xdg-open",
                "args": ["https://localhost:9090"]
            },
            "osx": {
                "command": "open",
                "args": ["https://localhost:9090"]
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîÑ Sync Cockpit Files",
            "type": "shell",
            "command": "cockpit-sync",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "üß™ Test Wizard HTML",
            "type": "shell",
            "command": "echo",
            "args": ["Testing wizard.html syntax..."],
            "windows": {
                "command": "start",
                "args": ["https://localhost:9090/xavs-main/wizard-test.html"]
            },
            "linux": {
                "command": "curl",
                "args": ["-k", "-I", "https://localhost:9090/xavs"]
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üìù Validate JavaScript",
            "type": "shell",
            "command": "node",
            "args": ["-c", "${file}"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}